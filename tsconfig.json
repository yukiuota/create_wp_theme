{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "outDir": "./common/js",
    "rootDir": "./common/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": false
  },
  "include": [
    "common/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "common/js"
  ]
}